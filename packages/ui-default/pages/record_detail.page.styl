.page--record_detail

  .compiler-text
    padding: rem(20px 0)
    font-size: rem($font-size-small)
    &:empty
      display: none

  .subtask
    font-size: rem($font-size-secondary)

    .cell
      margin: auto 0

    .subtask-line
      display: grid
      grid-template-columns: 4fr 5fr 4fr
      line-height: rem($table-lh)
      padding-left: rem($section-gap-h)
      border-top: 1px solid $table-border-color
      border-bottom: 1px solid $table-border-color

    .case
      border-top: 1px solid $table-border-color
      border-bottom: 1px solid $table-border-color

      .case-line
        display: grid
        grid-template-columns: 3fr 5fr 4fr 3fr 3fr
        line-height: rem($table-lh)
        height: 40.15px
        &:first-child
          padding-left: 0.5em

      .details
        display: none
        padding-left: 0.5em
        padding-right: 0.5em

      .expand-icon
        display: inline-block

    .case.expanded
      .details
        display: block

      .expand-icon
        transform: rotate(180deg)

    .case:nth-of-type(even)
      background: $table-alternate-bg-color

    .section__title
      margin-top: 1em
    
    .monaco-target
      height: 20em

      .custom-error-line
        background: rgba(255, 100, 100, 0.5)

      .custom-ignore-bytes
        color: gray