.page--problem_main
.page--problem_category
  .col--checkbox
    width: rem(61px)

  .col--pid
    width: rem(81px)
  
  .col--status
    width: rem(140px)
    position: relative
    border-right: 1px solid $table-border-color

  .col--difficulty
    width: rem(70px)
    text-align: center
  
  &[lang="en"]
    .col--difficulty
      width: rem(95px)

  .col--ac-tried
    width: rem(100px)
    text-align: center
    border-left: 1px solid $table-border-color

  +mobile()
    .col--status,
    .col--tried,
    .col--difficulty
      display: none

    .col--ac
      border-left: 1px solid $table-border-color


.widget--category-filter
  &__category
    margin-bottom: rem(6px)

    &-tag
      display: inline-block
      padding: rem(5px 6px)

      &:hover
        color: #FFF
        background: $primary-color
        text-decoration: none

      &.selected
        color: #FFF
        background: $secondary-color

  &__drop
    position: relative
    font-size: rem($font-size-small)
    width: rem(230px)
    padding: rem(10px)
    margin-right: rem(10px)
    background: $menu-drop-bg-color
    box-shadow: $menu-drop-shadow

    &:before
      content: ''
      display: block
      position: absolute
      width: 0
      height: 0
      border: rem($menu-drop-triangle-size) solid transparent
      border-top-color: #FFF
      border-left-color: #FFF
      box-shadow: $menu-drop-triangle-shadow
      transform: rotate(135deg)
      transform-origin: 0 0
      pointer-events: none
      left: 100%
      top: 50%
      margin-left: rem(floor($menu-drop-triangle-size * 1.414))

  &__subcategory
    margin: rem(2px)
    display: inline-block

    &-tag
      display: inline-block
      padding: rem(5px 6px)

      &:hover
        color: #FFF
        background: $primary-color
        text-decoration: none

      &.selected
        color: #FFF
        background: $secondary-color

.drop-target-attached-right .widget--category-filter__drop
  margin-right: 0
  margin-left: rem(10px)

  &:before
    transform-origin: 100% 0
    transform: rotate(-45deg)
    left: auto
    right: 100%
    margin-left: 0
    margin-right: 0
    margin-top: rem(floor($menu-drop-triangle-size * -1.414))


.display-mode .display-mode-hide,
.edit-mode .edit-mode-hide,
.hide-problem-tag .notag--hide,
.tag--hide
  display: none

.hide-problem-tag .tag--hide
  display: block

.toggle-tag
  float: right

.data-table > tbody > tr
  height: 40.15px

.data-table > thead > tr
  height: 54.9px

.section__header.no-padding
  padding: 0

form > .search-container
  padding: 12px 16px 0 16px
  background: #f6f5fa
  margin-bottom: -10px

.search-container--header
  justify-content: space-between
  align-items: center
  background: #ffffff
  padding: 6px 20px

  & > .title
    font-size: 18px
    font-weight: bold
    color: #3774c9

  & > .search
    width: calc(100% - 90px)
    position: relative
    align-items: center

    & > .search--bar
      width: 100%
      background: #eeeff3

      & > input
        width: 100%
        background: #eeeff3
        border: none
        padding: 5px 0
        height: 36px
        outline: none
        color: #000000

      & > input::placeholder
        color: #b0b0b0

      & > div
        align-items: center
        padding: 0 12px      

        & > span
          font-size: rem(20px)
          color: #b0b0b0  

    & > button
      width: 100px
      height: 36px
      border: 1px solid #458ae7
      background: #458ae7
      text-align: center
      color: #fff
      cursor: pointer
      font-size: rem(16px)
      font-weight: bold

.text--align-vertical
  display: flex
  align-items: center

.search-container--body

  & > section
    margin-bottom: 5px

    & > .title
      font-size: 16px
      font-weight: bold
      margin-right: 48px
      height: 30px

    & .list
      max-width: calc(100% - 100px)

      & .list__item
        font-size: 14px
        padding: 8px 20px
        cursor: pointer

        &.selected
          background: #458ae7
          color: #ffffff
          padding: 6px 18px
          margin: 2px 2px
          padding-right: 8px

          & > span
            padding-left: 6px

  & .subcategory-container
    width: calc(100% - 90px)    

    & .dialog-button
      border: 1px solid #458ae7
      color: #458ae7      

.subcategory-container__selected
  margin: 4px 0 0 0

  & .list__item
    font-size: 14px
    padding: 6px 8px
    margin: 2px 2px
    background: #eaeaea
    cursor: pointer
    min-width: 90px
    text-align: center

    &.selected
      background: #adc6e5
      color: #5782be

    & > span
      font-size: 14px      
      vertical-align: middle

    &.hide 
      display: none
      opacity: 0    

.search-container 
  & .problem-stat
    justify-content: space-between

    & > p
      font-size: 14px
      color: #4c4a48

    & > .link
      color: #458ae7
      cursor: pointer
      text-decoration: underline
      font-size: 14px

.category-filter__header
  & [data-category-container].list
    overflow-x: auto

  & .list
    & .list__item
      padding: 12px 12px
      cursor: pointer
      margin: 0px 10px
      background: #eeeff3
      min-width: 90px
      text-align: center
      position: relative

      &.selected
        background: #458ae7
        color: #ffffff
        font-weight: bold

      & > .red-dot
        width: 20px
        height: 20px
        border-radius: 50%
        background: #ef6060
        color: #ffffff
        position: absolute
        top: 0px
        right: 0px
        transform: translate(50%, -50%)
        font-size: 14px
        text-align: center
        line-height: 20px

        &.hide 
          display: none
          opacity: 0

    & .list__item::first
      margin-left: 0px

.category-filter__body
  margin: 12px 10px 0 10px
  background: #f7f7f7
  max-height: rem(400px)
  overflow-y: auto  

  .subcategory-container
    padding: 24px

    &.hide
      display: none
      opacity: 0

    & h2
      font-size: 16px
      font-weight: bold
      margin-bottom: 16px

  & .list
    margin: 24px 0 0 0

    & .list__item
      padding: 8px 10px
      margin: 0 16px 16px 0
      background: #eaeaea
      cursor: pointer
      min-width: 100px
      text-align: center

      &.selected
        background: #adc6e5
        color: #5782be

      & > span
        font-size: 14px      
        vertical-align: middle

      &.hide 
        display: none
        opacity: 0        

  & .divider
    border-bottom: 1px solid #e5e5e5
    margin: 4px 0

  & .subcategory__all
    margin: 24px 0 0 0

.search
  width: 100%
  position: relative
  display: flex

.search > input
  width: 100%
  border: 1px solid #cccccc
  border-right: none
  padding: 5px
  height: 36px
  outline: none
  color: #000000

.search > button
  width: 40px
  height: 36px
  border: 1px solid #00B4CC
  background: #00B4CC
  text-align: center
  color: #fff
  cursor: pointer
  font-size: 20px

.search > div
  position: absolute
  right: 50px
  top: 8px
  font-size: rem(17px)