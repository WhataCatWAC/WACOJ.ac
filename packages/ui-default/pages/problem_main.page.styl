.search-container
  padding: 0.05rem 0 0 0 
  background: #f6f5fa

.search-panel
  margin: 16px
  margin-bottom: -10px

.search-panel--header
  display: flex
  justify-content: space-between
  align-items: center
  background: #ffffff
  padding: 6px 20px

.search-panel--header > .title
  font-size: 18px
  font-weight: bold
  color: #3774c9

.search-panel--header > .search
  width: calc(100% - 90px)
  position: relative
  display: flex
  align-items: center

.search > .search--bar
  width: 100%
  background: #eeeff3
  display: flex

.search--bar > input
  width: 100%
  background: #eeeff3
  border: none
  padding: 5px 0
  height: 36px
  outline: none
  color: #000000

.search--bar > input::placeholder
  color: #b0b0b0

.search--bar > div
  display: flex
  align-items: center
  padding: 0 12px

.search--bar > div > span
  font-size: rem(20px)
  color: #b0b0b0

.search > button
  width: 100px
  height: 36px
  border: 1px solid #458ae7
  background: #458ae7
  text-align: center
  color: #fff
  cursor: pointer
  font-size: rem(16px)
  font-weight: bold

.search-panel--body
  padding: 24px 20px

.search-panel--body > section
  display: flex
  margin-bottom: 40px

.search-panel--body .text-align-vertical
  display: flex
  align-items: center

.search-panel--body .title
  font-size: 16px
  font-weight: bold
  margin-right: 48px
  height: 30px

.search-panel--body .list
  display: flex
  flex-flow: row wrap
  max-width: calc(100% - 100px)

.search-panel--body .list__item
  font-size: 14px
  padding: 8px 20px
  cursor: pointer

.search-panel--body .list__item.selected
  background: #458ae7
  color: #ffffff
  padding: 6px 18px
  margin: 2px 2px
  padding-right: 8px

.search-panel--body .list__item.selected > span
  padding-left: 6px

.search-panel--body .list > .dialog-button
  border: 1px solid #458ae7
  color: #458ae7

.search-panel--body .problem-tag-container
  width: calc(100% - 90px)

.problem-tag-container--selected
  display: flex
  flex-flow: row wrap
  margin: 4px 0 0 0

  & > .item
    font-size: 14px
    padding: 6px 8px
    margin: 2px 2px
    background: #eaeaea
    cursor: pointer
    min-width: 90px
    text-align: center

    &.selected
      background: #adc6e5
      color: #5782be

    & > span
      font-size: 14px      
      vertical-align: middle

    &.hide 
      display: none
      opacity: 0    

.search-panel .problem-stat
  display: flex
  justify-content: space-between

.search-panel .problem-stat > p
  font-size: 14px
  color: #4c4a48

.search-panel .problem-stat .link
  color: #458ae7
  cursor: pointer
  text-decoration: underline

.search-dialog
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  z-index: 1000
  flex-direction: column
  align-items: center
  justify-content: center
  background: $dialog-layer-bg-color
  display: flex
  opacity: 1
  
.search-dialog.hide
  display: none
  opacity: 0

.dialog__content
  position: relative

.search-dialog .dialog__content
  background: $dialog-bg-color
  border: 1px solid $dialog-border-color
  box-shadow: $dialog-shadow
  min-width: rem(500px)
  max-width: rem(900px)
  padding: rem(24px) rem(14px)

.dialog--select__header--list
  display: flex
  flex-flow: row wrap

.dialog--select__header--item
  padding: 12px 12px
  cursor: pointer
  margin: 0px 10px
  background: #eeeff3
  min-width: 90px
  text-align: center
  position: relative

  &.selected
    background: #458ae7
    color: #ffffff
    font-weight: bold

  & > .red-dot
    width: 20px
    height: 20px
    border-radius: 50%
    background: #ef6060
    color: #ffffff
    position: absolute
    top: 0px
    right: 0px
    transform: translate(50%, -50%)
    font-size: 14px
    text-align: center
    line-height: 20px

    &.hide 
      display: none
      opacity: 0

.dialog--select__header--item::first
  margin-left: 0px

.dialog--select__body
  margin: 12px 10px 0 10px
  background: #f7f7f7
  max-height: rem(400px)
  overflow-y: auto

  & .list
    display: flex
    flex-flow: row wrap
    margin: 24px 0 0 0

    & > .item
      padding: 8px 10px
      margin: 0 16px 16px 0
      background: #eaeaea
      cursor: pointer
      min-width: 100px
      text-align: center

      &.selected
        background: #adc6e5
        color: #5782be

      & > span
        font-size: 14px      
        vertical-align: middle

      &.hide 
        display: none
        opacity: 0        

.dialog--select__body--tags
  padding: 24px

  &.hide
    display: none
    opacity: 0

.dialog--select__body--tags h2
  font-size: 16px
  font-weight: bold
  margin-bottom: 16px

.dialog--select__body--divider
  border-bottom: 1px solid #e5e5e5
  margin: 4px 0

.dialog--select__body--tags__all
  margin: 24px 0 0 0
